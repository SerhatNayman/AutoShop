<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Dogrulama">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/autoshop"></ImageView>

    <EditText
        android:id="@+id/kullanicidogrula"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Username"
        android:textColor="#F44336"
        android:padding="10dp"></EditText>

    <EditText
        android:id="@+id/dogrulamakod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Doğrulama Kodunuz"
        android:textColor="#F44336"
        android:padding="10dp"></EditText>

    <Button
        android:id="@+id/dogrulabtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Doğrula!"></Button>


</LinearLayout>